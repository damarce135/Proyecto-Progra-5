@model IEnumerable<UI.Models.Solicitud>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <!-- Custom styles for this page -->
    <link href="~/theme/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>

<h1>Lista de Solicitudes</h1>

@*<p>
    <a asp-action="Create">Create</a>
</p>*@
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Asunto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Asunto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.IdSolicitud">Edit</a> |*@
                        <a asp-action="Details" asp-route-id="@item.IdSolicitud">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdSolicitud">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   </div>