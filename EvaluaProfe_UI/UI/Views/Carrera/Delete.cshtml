@model UI.Models.Carrera

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Desea eliminar la carrera seleccionada?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCarrera)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCarrera)
